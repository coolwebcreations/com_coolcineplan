<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="id"
			type="text"
			default="0"
			label="COM_COOLCINEPLAN_FORM_LBL_RESERVATION_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
		/> 

 
		<field name="created_by"
			type="createdby"
			default=""
			label="COM_COOLCINEPLAN_FORM_LBL_RESERVATION_CREATED_BY"
			description="COM_COOLCINEPLAN_FORM_DESC_RESERVATION_CREATED_BY" 
			hint="COM_COOLCINEPLAN_FORM_LBL_RESERVATION_CREATED_BY"
		/> 

 
		<field name="modified_by"
			type="modifiedby"
			default=""
			label="COM_COOLCINEPLAN_FORM_LBL_RESERVATION_MODIFIED_BY"
			description="COM_COOLCINEPLAN_FORM_DESC_RESERVATION_MODIFIED_BY" 
			hint="COM_COOLCINEPLAN_FORM_LBL_RESERVATION_MODIFIED_BY"
		/> 

 
		<field name="show_id"
			type="sql"
			label="Show"
			description=""
			query="SELECT id, date FROM #__cineplan_shows"
			key_field="id"
			value_field="time"
		/> 

 
		<field name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
			labelclass="control-label"
		/> 

 
		<field name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field> 

 
		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/> 

 
	</fieldset> 

 
	<fieldset name="accesscontrol">

		<field name="asset_id"
			type="hidden"
			filter="unset"
		/>

		<field name="rules"
			type="rules"
			label="JFIELD_RULES_LABEL"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_coolcineplan"
			section="reservation"
		/>

	</fieldset>

</form>
